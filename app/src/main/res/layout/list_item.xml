<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listLR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:elevation="25dp"
    android:focusable="true"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        app:cardBackgroundColor="#2F9C17"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivObject"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@id/ivObject"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="227dp"
                tools:layout_editor_absoluteY="20dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@id/labelPrice"
                android:text="Price"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="54dp" />

            <TextView
                android:id="@+id/labelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@id/ivObject"
                android:text="Price: "
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="54dp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPrice"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/labelDate"
                android:text="Date"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="82dp" />

            <TextView
                android:id="@+id/labelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelPrice"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/ivObject"
                android:text="Date: "
                tools:layout_editor_absoluteX="176dp"
                tools:layout_editor_absoluteY="82dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>